<?xml version="1.0" encoding="utf-8"?>
<manifest package="br.com.mirante"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.activity.MainActivity"
            android:label="@string/app_name"/>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="261bfd3602858c9f2e4854c1a3db72d9dcb24c73"/>

        <activity
            android:name=".views.activity.NewPostActivity"
            android:label="@string/title_activity_new_post"
            android:parentActivityName=".views.activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.activity.MainActivity"/>
        </activity>
        <activity
            android:name=".views.activity.NewChannelActivity"
            android:label="@string/title_activity_new_channel"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".views.activity.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".views.activity.NewAccountActivity"
            android:label="@string/title_activity_new_account"
            android:parentActivityName=".views.activity.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.mirante.views.activity.HomeActivity"/>
        </activity>
        <activity
            android:name=".views.activity.FeedActivity"
            android:label="@string/title_activity_feed"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>
